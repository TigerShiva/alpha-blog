<%= render "shared/errors", obj: @category %>

<%= form_for @category, :html => {class: "form-horizontal", role: "form"} do |a| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= a.label :category %>
        </div>
        <div class="col-sm-8">
            <%= a.text_field :name, class: "form-control", placeholder: "Category title", autofocus: true %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= a.submit class: "btn btn-primary btn-lg" %>
        </div>
    </div>
    <% end %>
    <div class="col-centered col-xs-4 center">
        [ <%= link_to "Back", articles_path %> ]
    </div>
    <div class="buffer"></div>